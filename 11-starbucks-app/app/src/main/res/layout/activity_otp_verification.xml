<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="24dp">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/starbucks_logo"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:contentDescription="@string/starbucks_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verify_phone"
        android:textColor="@color/starbucks_dark_green"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verification_code_sent"
        android:textColor="@color/gray"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="40dp" />

    <TextView
        android:id="@+id/tvOtpLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_verification_code"
        android:textColor="@color/starbucks_dark_green"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="30dp">

        <EditText
            android:id="@+id/etOtp1"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            android:background="@drawable/otp_box"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/starbucks_dark_green"
            android:textSize="24sp"
            android:textStyle="bold"
            android:importantForAutofill="no"
            android:hint="@string/otp_digit_1_hint" />

        <EditText
            android:id="@+id/etOtp2"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            android:background="@drawable/otp_box"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/starbucks_dark_green"
            android:textSize="24sp"
            android:textStyle="bold"
            android:importantForAutofill="no"
            android:hint="@string/otp_digit_2_hint" />

        <EditText
            android:id="@+id/etOtp3"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            android:background="@drawable/otp_box"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/starbucks_dark_green"
            android:textSize="24sp"
            android:textStyle="bold"
            android:importantForAutofill="no"
            android:hint="@string/otp_digit_3_hint" />

        <EditText
            android:id="@+id/etOtp4"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            android:background="@drawable/otp_box"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/starbucks_dark_green"
            android:textSize="24sp"
            android:textStyle="bold"
            android:importantForAutofill="no"
            android:hint="@string/otp_digit_4_hint" />

        <EditText
            android:id="@+id/etOtp5"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            android:background="@drawable/otp_box"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/starbucks_dark_green"
            android:textSize="24sp"
            android:textStyle="bold"
            android:importantForAutofill="no"
            android:hint="@string/otp_digit_5_hint" />

        <EditText
            android:id="@+id/etOtp6"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            android:background="@drawable/otp_box"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/starbucks_dark_green"
            android:textSize="24sp"
            android:textStyle="bold"
            android:importantForAutofill="no"
            android:hint="@string/otp_digit_6_hint" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/didnt_receive_code"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Fixed: Added minimum touch target size with padding -->
    <TextView
        android:id="@+id/tvResendCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/resend_code_initial"
        android:textColor="@color/starbucks_green"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="12dp"
        android:minHeight="48dp"
        android:minWidth="48dp"
        android:gravity="center"
        android:background="?android:attr/selectableItemBackground" />

    <!-- Fixed: Reduced button width with horizontal margins -->
    <Button
        android:id="@+id/btnVerify"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/verify"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/button_green"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:minHeight="48dp" />

    <!-- Fixed: Added minimum touch target size with padding -->
    <TextView
        android:id="@+id/tvChangeNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_phone_number"
        android:textColor="@color/starbucks_green"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        android:minHeight="48dp"
        android:minWidth="48dp"
        android:gravity="center"
        android:background="?android:attr/selectableItemBackground" />

</LinearLayout>