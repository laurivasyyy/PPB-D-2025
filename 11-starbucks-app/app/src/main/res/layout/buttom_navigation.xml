<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:background="@color/white"
    android:elevation="8dp"
    android:baselineAligned="false">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/navHome"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/home"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:gravity="center"
        app:drawableTopCompat="@drawable/ic_home"
        android:drawablePadding="4dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/nav_home_description" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/navOrder"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/order"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:gravity="center"
        app:drawableTopCompat="@drawable/ic_menu"
        android:drawablePadding="4dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/nav_order_description" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/navStores"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/stores"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:gravity="center"
        app:drawableTopCompat="@drawable/ic_store"
        android:drawablePadding="4dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/nav_stores_description" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/navRewards"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/rewards"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:gravity="center"
        app:drawableTopCompat="@drawable/ic_rewards"
        android:drawablePadding="4dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/nav_rewards_description" />

</LinearLayout>
