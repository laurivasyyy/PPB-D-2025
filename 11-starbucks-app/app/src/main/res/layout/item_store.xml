<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/card_background"
    android:layout_marginBottom="12dp"
    android:padding="16dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvStoreName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/store_name_placeholder"
            android:textColor="@color/starbucks_dark_green"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvStoreAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/store_address_placeholder"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/store_hours_placeholder"
            android:textColor="@color/starbucks_green"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/store_distance_placeholder"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>